<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/content_padding">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/avatar_size_small"
        android:layout_height="@dimen/avatar_size_small"
        app:civ_border_color="@color/black_overlay"
        app:civ_border_width="@dimen/avatar_border_width" />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/forum_text_margin"
        android:layout_marginTop="@dimen/forum_text_margin"
        android:maxLines="1"
        android:layout_toEndOf="@id/avatar"
        android:text="用户昵称"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar"
        android:layout_marginTop="@dimen/forum_text_margin"
        android:layout_marginBottom="@dimen/forum_text_margin"
        android:maxLines="1"
        android:text="测试话题标题"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:maxLines="4"
        android:text="测试话题内容测试话题内容测试话题内容测试话题内容测试话题内容"
        android:textAppearance="?attr/textAppearanceListItem" />

</RelativeLayout>
